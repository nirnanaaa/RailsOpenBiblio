.row
	.span4
		.author-image.img-polaroid
			= image_tag "layout/logo_top.png"
	.span8
		%dl.author-info.dl-horizontal
			%dt
				%i.icon-user{:title=>'author'}
			%dd= @author.name
			- if @author.born
				%dt
					%i.icon-star{:title=>'born'}
				%dd= Time.at(@author.born).utc.strftime("%m/%d/%Y")
			
			- if @author.died
				%dt
					%i.icon-plus{:title=>'died'}
				%dd= Time.at(@author.born).utc.strftime("%m/%d/%Y")
				
			
			- if @author.biography
				%dt
					%i.icon-book{:title=>'biography'}
				%dd.author-biography
					%p
						= @author.biography

.row.low-margin
	%table.table.table-condensed.table-hover
		%thead
			%tr
				%td Name
				%td.small Released
				%td.small Actions
		%tbody
			- @author.books.each do |book|
				- if !book.available?
					%tr.error
						%td= book.name
						%td= book.release
						%td
							%a{:href=>'#'}
								%i.icon-trash
							&nbsp;| 
							%a{:href=>'#'}
								%i.icon-pencil
						
				- else
					%tr.success
						%td= book.name
						%td= book.release
						%td
							%a{:href=>'#'}
								%i.icon-trash
							&nbsp;| 
							%a{:href=>'#'}
								%i.icon-pencil