%h1
  = @book.name
%h4
  = raw(tag_generator(@book.kind))
.row.bit-center
  .pull-left
    = image_tag @book.image, :class => "img-polaroid", :width => 400
  -if @book.available
    %a{:href => perform_link(@book,"download")}    
      .bookicon.first-icon.pull-left
        .iconv.center
          %i.icon-download-alt.icon-6x
        .textv.center
          %b Download
    %a{:href => perform_link(@book,"lend")}      
      .bookicon.pull-left
        .iconv.center
          %i.icon-book.icon-6x
        .textv.center
          %b Lend 
  %a{:href => perform_link(@book,"book")}    
    .bookicon.pull-left
      .iconv.center
        %i.icon-calendar.icon-6x
      .textv.center
        %b Book    

  %a{:href => perform_link(@book,"stats")}      
    .bookicon.pull-left
      .iconv.center
        %i.icon-bar-chart.icon-6x
      .textv.center
        %b Stats
               
%dl.dl-horizontal
  %dt.book-name
    Name
    %i.icon-double-angle-right
  %dd= @book.name
  %dt.book-fullname
    Original Name
    %i.icon-double-angle-right
  %dd= @book.fullname or @book.name
  %dt.book-author
    Author
    %i.icon-double-angle-right
  %dd= authorlink(@book.author)
  - if @book.description
    %dt.book-description
      Content
      %i.icon-double-angle-right
    %dd.descriptionfield= @book.description
	
  %dt.book-links
    Links
    %i.icon-double-angle-right
  %dd
    - @book.links.each do |link|
      = link_to link.label.capitalize, link.url, :class => 'btn'
    = link_to raw("<i class='icon-plus'></i>"), "#{perform_link(@book,"link/add")}", :class => 'btn pull-right'
  %dt.book-genres
    Genre
    %i.icon-double-angle-right
		
  %dt.flags
    Flags
    %i.icon-double-angle-right
	
	
	
	