.row
	.pull-right
		= link_to "New Book", new_book_path(), :class => 'btn'
.row.bit-center
	%table
		%thead
			%tr
				%td Preview
				%td Information
				
		%tbody
		- Book.find(:all) do |book|
			%tr.der-gegenschlag
				%td.preview-image
					%a
						= image_tag book.image(:thumb)
				%td.list-information
					%dl.dl-horizontal
						%dt
							%i.icon-file{:title => 'name'.capitalize}
						%dd= book.name
						
						- if book.description
							%dt
								%i.icon-th{:title => 'description'}
							%dd= book.description
							
						%dt
							%i.icon-star{:title => 'author'}
						%dd= link_to book.author.name, :controller => :authors, :action => :show, :id => book.author.id
						
						- if book.kind
							%dt
								%i.icon-th-list{:title => 'tags'}
							%dd= tag_generator(book.kind)

		