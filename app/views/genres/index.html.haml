.row
  .pull-right
    = link_to t('genre.new').capitalize, new_genres_path(), :class => 'btn new-button'
.row.bit-center
  %table.table-hover.table-bordered.hundret.table-striped
    %thead
      %tr
        %td Name
        %td Description
         
    %tbody
    - Genre.find(:all).each do |genre|
      %tr.clickable{:onclick => "window.location = '#{genre_view_path(:genre => genre.name)}'"}
        %td.genre-name.table-field= genre.name
        %td.genre-desc.table-field= truncate(genre.description,:length => 220)
